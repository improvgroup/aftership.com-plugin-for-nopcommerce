@{
    Layout = "_ConfigurePlugin";
}
@model Nop.Plugin.Tracking.AfterShip.Models.ConfigurationModel

<form asp-controller="TrackingAfterShip" asp-action="Configure" method="post" id="shipping-byweight-form">
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="ApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiKey" />
                        <span asp-validation-for="ApiKey"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AfterShipUsername" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AfterShipUsername" />
                        <span asp-validation-for="AfterShipUsername"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <nop-label asp-for="AllowCustomerNotification" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="AllowCustomerNotification" />
                        <span asp-validation-for="AllowCustomerNotification"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
